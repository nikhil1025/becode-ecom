// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ADMIN
  SUPERADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  CONFIRMED
  DELIVERED
  REFUNDED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum OrderItemStatus {
  PLACED
  SHIPPED
  DELIVERED
  RETURN_REQUESTED
  RETURNED
  CANCELLED
}

enum ProductStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String   @default("")
  googleId      String?  @unique
  firstName     String?
  lastName      String?
  phone         String?
  avatar        String?
  role          UserRole @default(CUSTOMER)
  emailVerified Boolean  @default(false)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  orders        Order[]
  reviews       Review[]
  addresses     Address[]
  cart          Cart?
  wishlistItems WishlistItem[]
  returns       Return[]
  wallet        Wallet?
  refunds       Refund[]

  @@map("users")
}

model Category {
  id          String     @id @default(uuid())
  name        String
  slug        String     @unique
  description String?
  image       String?
  parentId    String?
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  position    Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  products           Product[]
  featuredCategories FeaturedCategory[]

  @@map("categories")
}

model Brand {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]

  @@map("brands")
}

model Product {
  id               String        @id @default(uuid())
  name             String
  slug             String        @unique
  sku              String        @unique
  shortDescription String?
  longDescription  String?
  categoryId       String
  category         Category      @relation(fields: [categoryId], references: [id])
  brandId          String?
  brand            Brand?        @relation(fields: [brandId], references: [id])
  weight           Float?
  dimensions       Json?
  status           ProductStatus @default(DRAFT)
  isFeatured       Boolean       @default(false)
  allowReviews     Boolean       @default(true)
  averageRating    Float         @default(0)
  reviewCount      Int           @default(0)
  metaTitle        String?
  metaDescription  String?
  isDeleted        Boolean       @default(false)
  deletedAt        DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  variants         ProductVariant[]
  reviews          Review[]
  orderItems       OrderItem[]
  wishlistItems    WishlistItem[]
  cartItems        CartItem[]
  exchangeReturns  ReturnItem[]      @relation("ExchangeProducts")
  featuredProducts FeaturedProduct[]
  popularProducts  PopularProduct[]

  @@index([isDeleted])
  @@map("products")
}

model ProductImage {
  id        String         @id @default(uuid())
  variantId String
  variant   ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  url       String
  altText   String?
  position  Int            @default(0)
  isPrimary Boolean        @default(false)
  createdAt DateTime       @default(now())

  @@index([variantId])
  @@map("product_images")
}

model ProductVariant {
  id                String   @id @default(uuid())
  productId         String
  product           Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  sku               String   @unique
  name              String
  price             Float
  salePrice         Float?
  costPrice         Float?
  stockQuantity     Int      @default(0)
  lowStockThreshold Int      @default(10)
  attributes        Json
  weight            Float?
  dimensions        Json?
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  images     ProductImage[]
  orderItems OrderItem[]
  cartItems  CartItem[]

  @@index([productId])
  @@index([isActive])
  @@index([stockQuantity])
  @@map("product_variants")
}

model Order {
  id              String         @id @default(uuid())
  orderNumber     String         @unique
  userId          String
  user            User           @relation(fields: [userId], references: [id])
  status          OrderStatus    @default(PENDING)
  paymentStatus   PaymentStatus  @default(PENDING)
  subtotal        Float
  tax             Float          @default(0)
  shipping        Float          @default(0)
  discount        Float          @default(0)
  total           Float
  shippingAddress Json
  billingAddress  Json
  paymentMethod   String?
  notes           String?
  trackingStatus  TrackingStatus @default(ORDER_PLACED)
  deliveryAgentId String?
  deliveryAgent   DeliveryAgent? @relation(fields: [deliveryAgentId], references: [id])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  items   OrderItem[]
  returns Return[]

  @@map("orders")
}

model DeliveryAgent {
  id          String   @id @default(uuid())
  name        String
  phone       String
  vehicleInfo String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders Order[]

  @@map("delivery_agents")
}

model OrderItem {
  id                 String          @id @default(uuid())
  orderId            String
  order              Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId          String
  product            Product         @relation(fields: [productId], references: [id])
  variantId          String
  variant            ProductVariant  @relation(fields: [variantId], references: [id])
  quantity           Int
  price              Float
  productSnapshot    Json
  status             OrderItemStatus @default(PLACED)
  cancellationReason String?
  cancelledAt        DateTime?
  returnItems        ReturnItem[]
  createdAt          DateTime        @default(now())

  @@index([orderId])
  @@index([variantId])
  @@map("order_items")
}

model Review {
  id                 String       @id @default(uuid())
  productId          String
  product            Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId             String
  user               User         @relation(fields: [userId], references: [id])
  rating             Int // 1-5
  title              String?
  content            String
  images             Json? // Array of image URLs
  isVerifiedPurchase Boolean      @default(false)
  status             ReviewStatus @default(PENDING)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@map("reviews")
}

model Address {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName    String
  lastName     String
  company      String?
  addressLine1 String
  addressLine2 String?
  city         String
  state        String
  postalCode   String
  country      String
  phone        String?
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("addresses")
}

model Cart {
  id        String    @id @default(uuid())
  userId    String?   @unique
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId String?   @unique
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  items CartItem[]

  @@map("carts")
}

model CartItem {
  id        String         @id @default(uuid())
  cartId    String
  cart      Cart           @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product        @relation(fields: [productId], references: [id])
  variantId String
  variant   ProductVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  quantity  Int            @default(1)
  price     Float
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@unique([cartId, variantId])
  @@index([cartId])
  @@index([variantId])
  @@map("cart_items")
}

model WishlistItem {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@map("wishlist_items")
}

enum ContentType {
  TERMS
  PRIVACY
  ABOUT
  FAQS
  SHIPPING
  RETURNS
}

enum ContentStatus {
  DRAFT
  PUBLISHED
}

enum ReturnType {
  RETURN
  EXCHANGE
}

enum ReturnStatus {
  REQUESTED
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  EXCHANGE_APPROVED
  HOLD_FOR_INSPECTION
  REFUNDED
  PENDING
  APPROVED
  PROCESSING
  COMPLETED
  CANCELLED
}

enum TrackingStatus {
  ORDER_PLACED
  CONFIRMED
  PROCESSING
  PACKED
  SHIPPED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

model SiteContent {
  id            String        @id @default(uuid())
  type          ContentType   @unique
  slug          String        @unique
  title         String
  content       String        @db.Text
  status        ContentStatus @default(DRAFT)
  lastUpdatedBy String?
  metadata      Json? // For FAQs: [{question: "", answer: ""}]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([slug])
  @@index([status])
  @@map("site_content")
}

model Return {
  id              String       @id @default(uuid())
  orderId         String
  order           Order        @relation(fields: [orderId], references: [id])
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  type            ReturnType
  status          ReturnStatus @default(REQUESTED)
  reason          String
  comments        String?
  images          Json? // To store an array of image URLs
  rejectionReason String?
  statusHistory   Json? // Track status change history
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  items  ReturnItem[]
  refund Refund?

  @@map("returns")
}

model ReturnItem {
  id                 String    @id @default(uuid())
  returnId           String
  return             Return    @relation(fields: [returnId], references: [id], onDelete: Cascade)
  orderItemId        String
  orderItem          OrderItem @relation(fields: [orderItemId], references: [id])
  quantity           Int
  exchangeProductId  String?   @map("exchange_product_id")
  exchangeProductRef Product?  @relation("ExchangeProducts", fields: [exchangeProductId], references: [id])
  exchangeVariantId  String?   @map("exchange_variant_id")
  createdAt          DateTime  @default(now())

  @@map("return_items")
}

// Homepage CMS Models

model FeaturedProduct {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  priority  Int      @default(0) // Lower number = higher priority
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId])
  @@index([priority])
  @@index([isActive])
  @@map("featured_products")
}

model PopularProduct {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  priority  Int      @default(0)
  isActive  Boolean  @default(true)
  score     Float    @default(0) // For future analytics-based ranking
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId])
  @@index([priority])
  @@index([isActive])
  @@map("popular_products")
}

model FeaturedCategory {
  id         String   @id @default(uuid())
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  priority   Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([categoryId])
  @@index([priority])
  @@index([isActive])
  @@map("featured_categories")
}

enum NavigationType {
  CATEGORY
  PAGE
  CUSTOM
}

model NavigationTab {
  id          String         @id @default(uuid())
  type        NavigationType
  refId       String? // categoryId or pageSlug
  label       String
  url         String? // For custom links
  order       Int            @default(0)
  isActive    Boolean        @default(true)
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([order])
  @@index([isActive])
  @@map("navigation_tabs")
}

model NewsletterSubscriber {
  id             String    @id @default(uuid())
  email          String    @unique
  name           String?
  isActive       Boolean   @default(true)
  subscribedAt   DateTime  @default(now())
  unsubscribedAt DateTime?

  @@index([email])
  @@map("newsletter_subscribers")
}

model CommunityMember {
  id        String   @id @default(uuid())
  name      String
  email     String
  interest  String?
  status    String   @default("PENDING") // PENDING, CONTACTED, JOINED
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([status])
  @@map("community_members")
}

model HomepageConfig {
  id              String   @id @default(uuid())
  key             String   @unique // featured_products, popular_products, etc.
  isEnabled       Boolean  @default(true)
  sectionTitle    String?
  sectionSubtitle String?
  sectionOrder    Int      @default(0)
  maxItems        Int      @default(8)
  metaTitle       String?
  metaDescription String?
  customSettings  Json? // Additional configuration
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([key])
  @@index([sectionOrder])
  @@map("homepage_config")
}

// Audit Log Model for tracking admin actions
model AuditLog {
  id         String   @id @default(uuid())
  userId     String
  action     String // CREATE, UPDATE, DELETE, REORDER, etc.
  entityType String // Product, Category, FeaturedProduct, etc.
  entityId   String
  changes    Json? // Store old and new values
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
  @@map("audit_logs")
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum RefundMethod {
  BANK
  WALLET
  ORIGINAL
}

model Refund {
  id            String       @id @default(uuid())
  returnId      String?      @unique
  return        Return?      @relation(fields: [returnId], references: [id])
  orderId       String
  orderItemId   String
  userId        String
  user          User         @relation(fields: [userId], references: [id])
  amount        Float
  method        RefundMethod @default(WALLET)
  transactionId String
  refundDate    DateTime     @default(now())
  adminRemarks  String?
  notes         String?
  processedBy   String // Admin user ID
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("refunds")
}

model Wallet {
  id           String              @id @default(uuid())
  userId       String              @unique
  user         User                @relation(fields: [userId], references: [id])
  balance      Float               @default(0.0)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  transactions WalletTransaction[]

  @@map("wallets")
}

model WalletTransaction {
  id          String          @id @default(uuid())
  walletId    String
  wallet      Wallet          @relation(fields: [walletId], references: [id])
  amount      Float
  type        TransactionType
  description String
  relatedId   String? // Could be orderId, returnId, etc.
  createdAt   DateTime        @default(now())

  @@index([walletId])
  @@map("wallet_transactions")
}
