# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ADMIN_JWT_SECRET="your-super-secret-admin-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# App
PORT=3001
NODE_ENV=development

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Email Configuration (Brevo SMTP)
BREVO_SMTP_HOST="smtp-relay.brevo.com"
BREVO_SMTP_PORT="587"
BREVO_SMTP_USER="your-brevo-login-email"
BREVO_SMTP_PASSWORD="your-brevo-smtp-key"

# Email Settings
MAIL_FROM=noreply@themingcart.com
SUPPORT_EMAIL=support@themingcart.com
ADMIN_EMAIL=admin@themingcart.com
SUPPORT_PHONE="+1 (555) 123-4567"

# Branding Configuration
APP_NAME="Theming Cart"
APP_LOGO_URL="https://yourdomain.com/logo.png"
PRIMARY_BRAND_COLOR="#4CAF50"

# Social Media Links (Optional)
FACEBOOK_URL="https://facebook.com/themingcart"
INSTAGRAM_URL="https://instagram.com/themingcart"
TWITTER_URL="https://twitter.com/themingcart"
LINKEDIN_URL="https://linkedin.com/company/themingcart"

# Google OAuth (Optional - if using Google sign-in)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/auth/google/callback"
